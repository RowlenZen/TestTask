<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/fullText_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="sgjshdfsghj"/>

    <TextView
        android:id="@+id/score_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/fullText_answer"
        android:text="123"/>

    <TextView
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fullText_answer"
        android:layout_toLeftOf="@+id/score_number"
        android:layout_marginTop="16dp"
        android:text="Score: "/>

    <TextView
        android:id="@+id/nameUser_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/score_number"
        android:text="i am User"/>

    <TextView
        android:id="@+id/date_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_number"
        android:layout_toLeftOf="@+id/nameUser_answer"
        android:layout_marginEnd="16dp"
        android:text="12.34.5678"/>


</RelativeLayout>